<h2>Lista de productos</h2>
<div id='products' class='row'>
  <table class='table'>

    <thead class='table-dark'>
      <tr class='table-dark'>
        <th>ID</th>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Código</th>
        <th>Precio</th>
        <th>Estado</th>
        <th>Stock</th>
        <th>Categoría</th>
        <th>Thumbnail</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <td>{{this._id}}</td>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.code}}</td>
          <td>{{this.price}}</td>
          <td>{{#if this.status}}Activo{{else}}Inactivo{{/if}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.category}}</td>
          <td>{{#if this.thumbnail}} {{this.thumbnail}} {{else}}
              No hay imagen
            {{/if}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>